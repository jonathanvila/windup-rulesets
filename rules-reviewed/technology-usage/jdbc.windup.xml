<?xml version="1.0"?>
<ruleset
    xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="jdbc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset provides analysis of connectivity related libraries.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
        </dependencies>
    </metadata>
    <rules>
         <rule id="jdbc-01000">
            <when>
                <javaclass references="java.sql.Driver"/>
                <and>
                    <not>
                        <file filename="{*}java.sql.Driver"/>
                    </not>
                </and>
            </when>
            <perform>
                <classification title="JDBC Driver Used is older than version 4.0" category-id="optional" effort="1">
                    <description>The application uses a JDBCDriver that is older than version 4.0</description>
                </classification>
                <technology-tag level="INFORMATIONAL">JDBC Driver Version</technology-tag>
            </perform>

        </rule>
    </rules>
</ruleset>
