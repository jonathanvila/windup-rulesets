<?xml version="1.0"?>
<ruletest id="quarkus-metrics-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/springboot-metrics</testDataPath>
    <!-- By default sourceMode is True, so it will only consider .java files, not .jar binaries -->
    <sourceMode>true</sourceMode>
    <rulePath>../../../technology-usage/embedded-framework.windup.xml</rulePath>
    <rulePath>../springboot-metrics-to-quarkus.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="springboot-metrics-to-quarkus-0100-test">
                <when>
                    <not>
                        <hint-exists message="Replace the Micrometer dependency with Quarkus 'metrics' extension"/>
                    </not>
                </when>
                <perform>
                    <fail message="[springboot-metrics-to-quarkus-extension] Micrometer Dependency artifact replaced by Quarkus artifact was not found!" />
                </perform>
            </rule>
            <rule id="springboot-metrics-to-quarkus-0200-test">
                <when>
                    <not>
                        <hint-exists message="Replace the Micrometer code with Microprole Metrics code"/>
                    </not>
                </when>
                <perform>
                    <fail message="[springboot-metrics-to-quarkus-annotations] Micrometer code replaced by Microprofile Metrics code was not found!" />
                </perform>
            </rule>
            <rule id="springboot-metrics-to-quarkus-0300-test">
                <when>
                    <not>
                        <hint-exists message="Replace the Micrometer metric annotation with Microprofile metric annotation"/>
                    </not>
                </when>
                <perform>
                    <fail message="[springboot-metrics-to-quarkus-annotations] SpringBoot Micrometer metric replaced by Microprofile metric was not found!" />
                </perform>
            </rule>
            <rule id="springboot-metrics-embedded-framework-08200-test">
                <when>
                    <not>
                        <classification-exists classification="Embedded framework - Micrometer"/>
                        <technology-tag-exists technology-tag="Micrometer \(embedded\)"/>
                    </not>
                </when>
                <perform>
                    <fail message="Expected data not found for rule embedded-framework-08200"/>
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
